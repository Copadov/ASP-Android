<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/imageViewDot"
               motion:framePosition="19"
               android:alpha=".1" />
           <KeyAttribute
               motion:motionTarget="@+id/imageViewDotGreen"
               motion:framePosition="0"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/imageViewDotGreen"
               motion:framePosition="0"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/imageViewDotGreen"
               motion:framePosition="0"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/imageViewDot"
               motion:framePosition="40"
               android:alpha="0.5" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_editor_absoluteY="2dp"
            motion:layout_editor_absoluteX="72dp"
            android:id="@+id/imageView12" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            motion:layout_editor_absoluteX="11dp"
            android:id="@+id/textView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:id="@+id/imageViewDot"
            motion:layout_constraintStart_toEndOf="@+id/textView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:id="@+id/imageViewDot"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="2dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/textView"
            motion:layout_constraintVertical_bias="0.523"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:layout_marginBottom="2dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:id="@+id/imageViewDotGreen"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.0" />
    </ConstraintSet>
</MotionScene>