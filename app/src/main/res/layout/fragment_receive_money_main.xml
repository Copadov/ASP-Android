<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/asp_bg_degradado">

    <asp.android.aspandroidmaterial.ui.toolbars.ASPMaterialToolbarMainDashboard
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/toolbar_top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c_spei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_18"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/dp_8"
        app:strokeColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_16"
            android:paddingHorizontal="@dimen/dp_24">
            
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_spei"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_spei_small"
                android:padding="@dimen/dp_12"
                android:background="@drawable/circle_icon"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_spei"
                app:layout_constraintBottom_toBottomOf="@id/iv_spei"
                app:layout_constraintStart_toEndOf="@id/iv_spei"
                android:layout_marginStart="@dimen/dp_18"
                android:textAppearance="@style/Ubuntu.w500.color_242142.s12"
                android:text="@string/receive_money_spei" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_arrow_right"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_18"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/white"
        app:cardElevation="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/c_spei"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_16"
            android:paddingHorizontal="@dimen/dp_24">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_branch"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_branch_small"
                android:padding="@dimen/dp_16"
                android:background="@drawable/circle_icon"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_branch"
                app:layout_constraintBottom_toBottomOf="@id/iv_branch"
                app:layout_constraintStart_toEndOf="@id/iv_branch"
                android:layout_marginStart="@dimen/dp_18"
                android:textAppearance="@style/Ubuntu.w500.color_242142.s12"
                android:text="@string/receive_money_branch" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_arrow_right"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c_easy_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_18"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/white"
        app:cardElevation="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/c_branch"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_16"
            android:paddingHorizontal="@dimen/dp_24">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_easy_window"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_easy_window_small"
                android:padding="@dimen/dp_12"
                android:background="@drawable/circle_icon"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_easy_window"
                app:layout_constraintBottom_toBottomOf="@id/iv_easy_window"
                app:layout_constraintStart_toEndOf="@id/iv_easy_window"
                android:layout_marginStart="@dimen/dp_18"
                android:textAppearance="@style/Ubuntu.w500.color_242142.s12"
                android:text="@string/receive_money_easy_window" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_arrow_right"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>