<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accountDetailToolbarMain"
    android:background="@drawable/option_menu_dashboard"
    android:padding="0dp"
    tools:context=".ui.fragments.codi.CodiDevDetailFragment"
    android:nestedScrollingEnabled="true">
    <asp.android.aspandroidmaterial.ui.toolbars.ASPMaterialToolbarMainDashboard
        android:id="@+id/accountDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/toolbar_top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/successDevPay"
            android:layout_marginTop="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/successDevPay"
            app:layout_constraintBottom_toTopOf="@id/constraintLayoutDev"
            android:background="@drawable/ic_success"
            />
    <TextView
        android:id="@+id/txtMain"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/successDevPay"
        android:fontFamily="@font/ubuntu_bold"
        android:textAlignment="center"
        android:text="La devoluciÃ³n fue realizada"
        android:textColor="@color/text_1"
        app:layout_constraintBottom_toTopOf="@id/constraintLayoutDev"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutDev"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/option_menu_dashboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44">


        <TextView
            android:textAlignment="center"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Monto"
            android:textColor="@color/text_1"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.058" />

        <TextView
            android:id="@+id/amountDetail"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto_regular"
            android:text="$0.0"
            android:textColor="@color/asp_edittext_text_color"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_beneficiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountDetail"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/separator_line_icon" />


        <TextView
            android:id="@+id/ownerTittle"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Beneficiario"
            android:textColor="@color/text_1"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_beneficiario"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/ownerName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Fernando P"
            android:textColor="@color/asp_edittext_text_color"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ownerTittle"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_amount"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ownerName"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/separator_line_icon" />

        <TextView
            android:id="@+id/conceptDetail"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Referencia"
            android:textColor="@color/text_1"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_amount"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/refValue"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto_regular"
            android:text="cambio"
            android:textColor="@color/asp_edittext_text_color"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/conceptDetail"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_concept"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/refValue"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/separator_line_icon" />


        <TextView
            android:id="@+id/crDetail"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Clave de Rastreo"
            android:textColor="@color/text_1"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_concept"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/crValue"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/roboto_regular"
            android:text="12345678"
            android:textColor="@color/asp_edittext_text_color"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crDetail"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/ivShareQR"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/ic_circle_not_shadow"
        android:backgroundTint="@color/line_selected"
        android:padding="@dimen/dp_18"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayoutDev"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_share"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/txtShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Compartir"
        android:textAlignment="center"
        android:textColor="@color/asp_edittext_text_color"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivShareQR"
        app:layout_constraintVertical_bias="0.0" />

    <asp.android.aspandroidmaterial.ui.buttons.ASPMaterialIconButtonV3
        android:id="@+id/confirmarBtnDetailPagar"
        style="@style/ColoredButtonV2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="24dp"
        android:allowClickWhenDisabled="true"
        android:fontFamily="@font/ubuntu_regular"
        android:text="@string/accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtShare"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>