<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cobrarMainLayout"
    tools:context=".ui.fragments.codi.CobrarCodiFragment"
    android:nestedScrollingEnabled="true">

    <asp.android.aspandroidmaterial.ui.toolbars.ASPMaterialToolbarMainDashboard
        android:id="@+id/accountDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/toolbar_top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:nestedScrollingEnabled="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutMontoBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textMonto"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Ingresa monto*"
                android:textSize="18dp"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Switch
                android:id="@+id/montoVisual"
                android:layout_width="90dp"
                android:layout_height="22dp"
                android:layout_marginLeft="70dp"
                android:trackTint="@color/asp_edittext_text_color"
                app:layout_constraintBaseline_toBaselineOf="@id/textMonto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.397"
                app:layout_constraintStart_toEndOf="@id/textMonto"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Sin monto"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                app:layout_constraintBaseline_toBaselineOf="@id/textMonto"
                app:layout_constraintStart_toEndOf="@+id/montoVisual"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutMontoBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/layoutCtnMont">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginVertical="@dimen/dp_16"
                android:layout_marginHorizontal="16dp"
                app:hintEnabled="false"
                app:prefixText="$"
                app:hintTextAppearance="@style/Ubuntu.w400.color_818084.s16"
                app:boxStrokeColor="@color/color_7993BE"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="@dimen/dp_16"
                app:boxCornerRadiusBottomStart="@dimen/dp_16"
                app:boxCornerRadiusTopEnd="@dimen/dp_16"
                app:boxCornerRadiusTopStart="@dimen/dp_16">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_amount"
                    android:textAppearance="@style/Ubuntu.w400.color_818084.s16"
                    android:layout_width="match_parent"
                    android:inputType="numberDecimal"
                    android:layout_height="match_parent"
                    android:hint="$0.00"/>

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutCtnMont"
            android:id="@+id/layoutCtnConcept">

            <TextView
                android:id="@+id/conceptoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Concepto"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.048"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <asp.android.aspandroidmaterial.ui.inputs.ASPMaterialEditText
                android:id="@+id/conceptoInput"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="12dp"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                android:fontFamily="@font/ubuntu_medium"
                android:hint="Cobro"
                android:maxLength="40"
                android:textColorHint="@color/asp_edittext_text_color"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/conceptoText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/conceptoText"
                app:layout_constraintVertical_bias="0.009" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCtnRef"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutCtnConcept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp">


            <TextView
                android:id="@+id/referenciaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Referencia"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.037"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <asp.android.aspandroidmaterial.ui.inputs.ASPMaterialEditText
                android:id="@+id/referenciaInput"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/ubuntu_medium"
                android:hint="12345678"
                android:inputType="number"
                android:textColorHint="@color/asp_edittext_text_color"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/referenciaText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/referenciaText" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutCtnRef">
            <asp.android.aspandroidmaterial.ui.buttons.ASPMaterialIconButtonV3
                android:id="@+id/cobrarCodiBtn"
                style="@style/ColoredButtonV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_32"
                android:allowClickWhenDisabled="true"
                android:enabled="false"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/confirm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.726" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/amountLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountDetailToolbar"
        app:layout_constraintVertical_bias="1.0">



    </androidx.constraintlayout.widget.ConstraintLayout-->


</androidx.constraintlayout.widget.ConstraintLayout>