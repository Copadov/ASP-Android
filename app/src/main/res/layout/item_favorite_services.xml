<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_favorite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Ubuntu.w500.color_242142.s12"
        tools:text="Infonavit"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="@id/container_image"
        app:layout_constraintStart_toStartOf="@id/container_image"
        app:layout_constraintTop_toBottomOf="@id/container_image" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_image"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circle_icon" />

        <ImageView
            android:id="@+id/iv_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_16"
            android:src="@drawable/infonavit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>