<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado por defecto -->
    <item android:color="@color/checkbox_default" android:state_checked="false"/>
    <item android:color="@color/checkbox_default" android:state_checked="true"/>

    <!-- Estado presionado -->
    <item android:color="@color/checkbox_pressed" android:state_checked="false" android:state_pressed="true"/>
    <item android:color="@color/checkbox_pressed" android:state_checked="true" android:state_pressed="true"/>

    <!-- Estado activado -->
    <item android:color="@color/checkbox_selected" android:state_checked="true"/>

    <!-- Estado desactivado -->
    <item android:color="@color/checkbox_disabled" android:state_enabled="false"/>
</selector>